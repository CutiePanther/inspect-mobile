{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarBackgroundColor": "#EDEDED",
				"navigationBarTitleText": "商户主页"
			}
		},
		{
			"path": "pages/shop/detail",
			"style": {
				"navigationBarBackgroundColor": "#EDEDED",
				"navigationBarTitleText": "编辑商户",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/patrol/index",
			"style": {
				"navigationBarBackgroundColor": "#EDEDED",
				"navigationBarTitleText": "巡查上报",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/patrol/detail",
			"style": {
				"navigationBarBackgroundColor": "#EDEDED",
				"navigationBarTitleText": "巡查详情",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/record/index",
			"style": {
				"navigationBarBackgroundColor": "#EDEDED",
				"navigationBarTitleText": "巡查记录",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/login/index",
			"style": {
				"navigationBarTitleText": "登录",
				"navigationBarBackgroundColor": "#EDEDED"
			}
		},
		{
			"path": "pages/comment/index",
			"style": {
				"navigationBarTitleText": "评论"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}
